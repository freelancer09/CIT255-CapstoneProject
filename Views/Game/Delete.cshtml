@model CapstoneProject.Models.Game

@{
    ViewData["Title"] = "Delete";
}

<div style="width:auto;margin-left:10%;margin-right:10%">
    <h1>Delete</h1>

    <div class="plate">
        <h3>Are you sure you want to delete this?</h3>
        <h4>Game</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.RawgID)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.RawgID)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.GameList)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.GameList.Name)
            </dd class>
        </dl>
    </div>
    <br />
    <form asp-action="Delete" style="text-align:center;">
        <input type="hidden" asp-for="GameID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <button class="btn btn-danger">
            <a asp-action="Index" style="color:black!important;">Cancel</a>
        </button>
    </form>
</div>
