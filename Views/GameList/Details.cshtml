@model CapstoneProject.Models.GameListViewModel<Game>

@{
    ViewData["Title"] = "Details";
}

<div class="plate">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.gameList.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.gameList.Name)
        </dd>
        <dt class="col-sm-2">
            Games
        </dt>
        <dd class="col-sm-10">
            <table class="table">
            @foreach (Game game in Model.gameLists)
            {
                    <tr>
                        <td><a asp-area="" asp-controller="game" asp-action="@game.RawgID">@game.RawgID</a></td>
                        <td>
                            <a asp-controller="game" asp-action="Delete" asp-route-id="@game.GameID">Delete</a>
                        </td>
                    </tr>
            }
            </table>
        </dd>
    </dl>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.gameList.ID" class="btn btn-primary text-dark">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>
