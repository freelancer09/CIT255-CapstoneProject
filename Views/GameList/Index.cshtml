@model IEnumerable<CapstoneProject.Models.GameList>

@{
    ViewData["Title"] = "Index";
}

<form class="form-inline plate" asp-action="Index" method="get">
    <div class="form-group">
        <label class="sr-only" for="filter">Game</label>
        <input class="form-control" type="text" name="search" value="@ViewData["CurrentFilter"]" />
    </div>
    
    <input type="submit" value="Search" class="btn btn-primary" />
    <p>
        <a asp-action="Create">Create New</a>
    </p>
</form>
<br />
<div class="plate">
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Name)</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>
